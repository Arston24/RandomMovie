<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <Button
            android:text="@string/button_random"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/button_random"
            android:background="#F42424"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="90dp"/>
    <Spinner
            android:layout_width="150dp"
            android:textAlignment="center"
            android:prompt="@string/genre"
            android:layout_height="40dp"
            android:id="@+id/spinner_genre"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#212121"
            android:popupBackground="#DA1A1818"
            android:elevation="4dp"/>
    <Spinner
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:prompt="@string/year"
            android:background="#212121"
            android:id="@+id/spinner_year"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            android:popupBackground="#DA1A1818"
            android:elevation="4dp"/>

    <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="250dp"
            card_view:cardCornerRadius="4dp"
            android:layout_height="420dp"
            android:layout_marginBottom="130dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner_year"
            card_view:cardElevation="5dp">

        <RelativeLayout
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:background="#212121">

            <ImageView
                    android:id="@+id/card_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_image_height"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="0dp"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/ic_launcher_background"/>

            <TextView
                    android:id="@+id/card_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:layout_alignBottom="@+id/card_image"
                    android:layout_marginLeft="@dimen/md_keylines"
                    tools:text="Название фильма"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@color/white"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginBottom="-19dp"/>

            <RatingBar
                    android:id="@+id/movieRating"
                    style="@style/RatingBar"
                    android:theme="@style/RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="400dp"
                    android:numStars="5"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>